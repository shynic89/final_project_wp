<div class="page-header">
  <h1>
    Firms
    <a href="/firms/new" class="btn btn-lg btn-success">New Firm</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Mappable address</th>
        <th>Address</th>
        <th>Category</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.name %></td>
        <td><%= firm.mappable_address %></td>
        <td><%= firm.address %></td>
        <td><%= firm.category %></td>
        <td><%= firm.city %></td>
        <td><%= firm.state %></td>
        <td>
          <a href="/firms/<%= firm.id %>" class="btn btn-primary">Show</a>
          <a href="/firms/<%= firm.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_firm/<%= firm.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>