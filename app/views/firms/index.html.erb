<div class="page-header">

<%= form_tag firms_path, method: :get do %>
  <%= label :location, "Search frims near : " %>
  <%= text_field_tag :location, params[:location] %>

  <%= label :distance, "Distance : " %>
  <%= text_field_tag :distance, params[:distance] %>

  <%= submit_tag "Search" %>
<% end %>

</div>

<div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "firms_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
    <%= f.label :category_cont, "Category contains" %>
    <%= f.text_field :category_cont, :class => "form-control", :placeholder => "Category contains" %>
  </div>

<div class="form-group">
    <%= f.label :address_cont, "Address contains" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Address contains" %>
  </div>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/firms" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#firms_filters">
      Show Filters
    </a>
  </div>
</div>

  <div class="col-md-6">
      <div class="panel panel-default">
       <div class="panel-heading">

        <button type="button" class="btn btn-default btn-xs float-left">
        <a href="/firms/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </button>
       </div>
         
       <div class="panel-body">
       <table class="table table-striped table-hover">
       <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
        <th>City</th>
        <th>State</th>
      </tr>

      <% @firms.each do |firm| %>
      <tr>
        <td><a href="/firms/<%= firm.id %>"><%= firm.name %></a></td>
        <td><%= firm.address %></td>
        <td><%= firm.category %></td>
        <td><%= firm.city %></td>
        <td><%= firm.state %></td>

      </tr>
      <% end %>
    </table>
    <%= paginate @firms, theme: 'twitter-bootstrap-4' %>
  </div>
  
 </div>
</div>


<div class="col-md-6">
  <div class="panel panel-default">
  <div class="panel-heading">Map</div>
  <div class="panel-body">
      <div id="location_map" style="height: 480px;"></div>
  </div>
</div>
</div>

<!--row-->
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

